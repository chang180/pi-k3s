apiVersion: v1
kind: Secret
metadata:
  name: laravel-secrets
  namespace: pi-k3s
type: Opaque
data:
  # Generate APP_KEY: php artisan key:generate --show
  # Then encode:     echo -n 'base64:YOUR_KEY_HERE' | base64
  APP_KEY: REPLACE_WITH_BASE64_ENCODED_APP_KEY

  # Database credentials (empty for SQLite)
  DB_PASSWORD: ""
